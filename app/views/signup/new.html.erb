<div class="flex items-start justify-center h-screen bg-white-100">
  <div class="w-full h-3/4 p-10 bg-white shadow-md rounded-md max-w-4xl mt-10">
    <h1 class="font-bold text-5xl text-slate-700 text-center mb-4">Create your account</h1>

    <p class="text-center mt-1">
      Have an account already? <%= link_to "Login", new_session_path, class: "text-blue-600 underline" %>
    </p>

    <%= link_to "Back", root_path %>

    <%= form_for @user, url: signup_path do |f| %>
      <%= render "shared/form_errors", object: f.object %>

      <div class="mb-4">
        <%= f.label :name, class: "block text-gray-700 text-xl font-bold mb-2" %>
        <%= f.text_field :name, class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 text-xl font-bold mb-2" %>
        <%= f.email_field :email, class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700 text-xl font-bold mb-2" %>
        <%= f.password_field :password, class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block text-gray-700 text-xl font-bold mb-2" %>
        <%= f.password_field :password_confirmation, class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <%= f.submit class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
    <% end %>
  </div>
</div>