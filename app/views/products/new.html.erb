<h1> Sell A Product!</h1>

<%= link_to "Back", root_path %>

<%= form_for @product, html: { class: "container-md" }, url: products_create_path do |f|%>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <div class="form-group">
        <%= f.label :name, "Title", class: "form-label-md"%>
        <%= f.text_field :name, required: true, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :description, class: "form-label"%>
        <%= f.text_area :description, required: true, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :price, class: "form-label"%>
        <%= f.number_field :price, step: 0.01, min: 0, required: true, class: "form-control"%>
    </div>

    <div class="form-group">
        <%= f.label :quantity, class: "form-label"%>
        <%= f.number_field :quantity, required: true, min: 0 , class: "form-control"%>
    </div>

    <div class="form-group">
        <%= f.label :images %>
            <%= f.file_field :images, multiple: true, required: true, id: "image_field", class: "form-control", data: { max_files: 5 } %>
            <small class="text-muted" id="image_error" style="display: none;">Maximum 5 files allowed.</small>
        <div id="image_preview">
        </div>
    </div>
    <%= f.submit "List It!", class: "btn btn-primary" %>   
<% end %>