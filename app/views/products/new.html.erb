<h1>New Product</h1>

<%= link_to "Back", root_path %>

<%= form_for @product, url: products_create_path do |f| %>
    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div>
        <%= f.label :price %>
        <%= f.number_field :price %>
    </div>

    <div>
        <%= f.label :description %>
        <%= f.text_area :description %>
    </div>

    <div>
        <%= f.label :quantity %>
        <%= f.number_field :quantity %>
    </div>

    <%= f.submit %>
<% end %>
