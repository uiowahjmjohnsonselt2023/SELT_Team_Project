<div class="mt-8 flex justify-left">
  <%= link_to 'Back', :root, class: "bg-gray-300 hover:bg-gray-100 text-black py-2 px-4 rounded focus:outline-none focus:shadow-outline hover:no-underline" %>
</div>

<h1 class="text-6xl font-medium text-center mt-8"><%= @product.name %></h1> 

<% if @state == :available %>
  <p class="bg-green-500 text-white text-center py-2 px-4 rounded mt-4">In Stock</p>
<% else %>
  <p class="bg-red-500 text-white text-center py-2 px-4 rounded mt-4">Limited Stock</p>
<% end %>

<div class="text-xl mt-8 px-8">
  <p class="text-gray-700 mb-4"><%= @product.description %></p>
  <p class="text-gray-700 mb-2"><strong>Price:</strong> <%= number_to_currency(@product.price) %></p>
<p class="text-gray-700 mb-2"><strong>Seller:</strong> <%= @user.name %> </p>
  <p class="text-gray-700 mb-2"><strong>Category:</strong> <%= @product.category.name %></p>
  <p class="text-gray-700 mb-2"><strong>Tags:</strong> <%= @product.tag_list %></p>
  <br>
  <%= link_to "Add to Cart", add_to_cart_path(product_id: @product.id, quantity: 1), method: :post, class: "bg-blue-500 hover:bg-blue-300 text-white py-2 px-4 rounded hover:no-underline" %>
</div>

<h1 class="mt-16 text-center text-4xl">Photos</h1>

<% if @product.images.present? %>
  <ul class="grid grid-cols-3 gap-4 mt-8" id="photos-list">
    <%= render partial: 'images/image', collection: @product.images, cached: true %>
  </ul>
<% end %>
