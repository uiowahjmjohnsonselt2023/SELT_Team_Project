<div class="flex items-start justify-center h-screen bg-white-100">
  <div class="w-full h-3/4 p-10 bg-white shadow-md rounded-md max-w-4xl mt-10">
    <h1 class="font-bold text-5xl text-slate-700 text-center mb-4">Sign in</h1>

    <p class="text-center mb-6">Need an account? <%= link_to "Sign up", signup_path %></p>

    <%= form_tag(sessions_path, class: 'space-y-6') do %>
      <div>
        <label for="email" class="block text-xl font-semibold text-gray-700 mb-2">Email</label>
        <%= email_field_tag :email, nil, class: 'block w-full px-4 py-3 border rounded-md focus:ring-blue-500 focus:border-blue-500' %>
      </div>

      <div>
        <label for="password" class="block text-xl font-semibold text-gray-700 mb-2">Password</label>
        <%= password_field_tag :password, nil, class: 'block w-full px-4 py-3 border rounded-md focus:ring-blue-500 focus:border-blue-500' %>
      </div>

      <div class="mb-4">
      <%= check_box_tag :remember_me, '1', false, class: 'mr-2' %>
      <%= label_tag :remember_me, 'Remember me', class: 'text-gray-700' %>
      </div>

      <% if flash[:signin] %>
        <div class="p-4 mb-4 text-red-600 bg-red-100 border border-red-400 rounded">
          <%= flash[:signin] %>
        </div>
      <% end %>

      <%= submit_tag "Login", class: 'w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded focus:outline-none focus:shadow-outline' %>
    <% end %>

    <div class="mt-6 flex items-center justify-between">
      <hr class="w-full border-t border-gray-300">
      <p class="text-center text-gray-500 font-semibold px-3">OR</p>
      <hr class="w-full border-t border-gray-300">
    </div>

    <%= form_tag('/auth/github', method: 'post', data: { turbo: false }, class: 'mt-4') do %>
      <%= hidden_field_tag :remember_me, '1' %>
      <button type='submit' class='w-full bg-gray-800 hover:bg-gray-900 text-white py-3 px-4 rounded focus:outline-none focus:shadow-outline'>
        Login with Github
      </button>
    <% end %>
    <%= form_tag('/auth/google_oauth2', method: 'post', data: { turbo: false }, class: 'mt-4') do %>
      <%= hidden_field_tag :remember_me, '1' %>
      <button type='submit' class='w-full bg-blue-500 hover:bg-blue-600 text-white py-3 px-4 rounded focus:outline-none focus:shadow-outline'>
        Login with Google
      </button>
    <% end %>
  </div>
</div>
