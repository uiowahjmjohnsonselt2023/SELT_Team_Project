<h1>Sign in</h1>

<p>Need an account? <%= link_to "SignUp", new_signup_path %></p>

<%= form_tag(sessions_path) do %>
  <div>
    <%= label_tag :email %>
    <%= email_field_tag :email %>
  </div>

  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <% if flash[:signin] %>
    <div>
      <%= flash[:signin] %>
    </div>
  <% end %>

  <%= submit_tag "Login" %>
<% end %>
<p> or </p>
<%= form_tag('/auth/github', method: 'post', data: {turbo: false}) do %>
  <button type='submit'>Login with Github</button>
<% end %>