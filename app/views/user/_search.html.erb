<% unless @search_res.blank? %>
  <table>
    <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Promote</th>
    </tr>
    </thead>

    <tbody>
    <% @search_res.each do |match| %>
      <tr>
        <td><%= match.name %></td>
        <td><%= match.email %></td>
        <td><%= link_to "Promote", promote_path(id: match.id), method: :put %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>

